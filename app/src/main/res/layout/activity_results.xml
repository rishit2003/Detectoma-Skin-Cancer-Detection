<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/topMenuBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/darkGreen"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screening Results"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- ScrollView containing content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topMenuBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Title for the Results Section -->
            <TextView
                android:id="@+id/resultsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screening Results"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="12dp" />

        <!-- ImageView to Display the Original and CAM Overlay Image -->
        <ImageView
            android:id="@+id/imageView_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Screening Image"
            android:paddingBottom="12dp" />

        <!-- TextView to Display the AI Prediction -->

        <Button
            android:id="@+id/toggleHeatmapButton"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="Toggle heat " />

        <TextView
            android:id="@+id/predictionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediction: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- TextView to Display Questionnaire-Based Analysis -->
            <TextView
                android:id="@+id/resultsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Analyzing your questionnaire responses..."
                android:textSize="16sp"
                android:paddingTop="12dp" />

        <!-- TextView to Display Recommendations -->
            <TextView
                android:id="@+id/recommendationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="20dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
