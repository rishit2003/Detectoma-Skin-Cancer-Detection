<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/topMenuBar"
        android:layout_width="420dp"
        android:layout_height="75dp"
        android:background="@drawable/backgroundnavbar"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/backIconContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Back"
                app:tint="@color/white"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABCDE Criteria"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ScrollView Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topMenuBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- A for Asymmetry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asymmetry"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/asymmetryInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/info_ic"
                    android:contentDescription="Asymmetry Info"
                    app:tint="@color/darkGreen"
                    android:padding="4dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/asymmetryCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"

                android:text="Have you noticed any asymmetrical moles or spots?"
                android:textSize="14sp" />

            <!-- B for Border -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Border"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/borderInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/info_ic"
                    android:contentDescription="Border Info"
                    app:tint="@color/darkGreen"
                    android:padding="4dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/borderCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Do any moles have uneven, scalloped, or notched edges?"
                android:textSize="14sp" />

            <!-- C for Color -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/colorInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/info_ic"
                    android:contentDescription="Color Info"
                    app:tint="@color/darkGreen"
                    android:padding="4dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/colorCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Have you noticed moles with multiple colors?"
                android:textSize="14sp" />

            <!-- D for Diameter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diameter"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/diameterInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/info_ic"
                    android:contentDescription="Diameter Info"
                    app:tint="@color/darkGreen"
                    android:padding="4dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/diameterCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Are any moles larger than a pencil eraser (6 mm) or darker than others?"
                android:textSize="14sp" />

            <!-- E for Evolving -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Evolving"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/evolvingInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/info_ic"
                    android:contentDescription="Evolving Info"
                    app:tint="@color/darkGreen"
                    android:padding="4dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/evolvingCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Have you noticed changes in size, shape, color, or new symptoms like itching or bleeding?"
                android:textSize="14sp" />
            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Submit"
                android:backgroundTint="@color/darkGreen"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
