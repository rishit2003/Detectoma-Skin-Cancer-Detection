<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- Custom AlertDialog Theme -->
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Accent color for buttons -->
        <item name="colorAccent">@color/darkGreen</item>
        <!-- Button text color -->
        <item name="android:textColorPrimary">@color/darkGreen</item>
        <!-- Dialog background color -->
        <item name="android:background">@android:color/white</item>

    </style>

    <style name="CustomCheckBox">CustomCheckBox
        <item name="colorControlHighlight">@color/darkGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
        <item name="android:buttonTint">@color/darkGreen</item>
    </style>
</resources>
